{
  "name": "ember-astro",
  "version": "0.0.2",
  "description": "ember integration for astro.build",
  "keywords": [
    "ember-addon"
  ],
  "repository": "https://github.com/universal-ember/ember-astro",
  "license": "MIT",
  "author": "NullVoxPopuli",
  "type": "module",
  "exports": {
    ".": "./src/index.js",
    "./client.js": "./src/client.js",
    "./server.js": "./src/server.js",
    "./ember-addon-main": "./ember-addon-main.cjs",
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "cd docs && pnpm dev",
    "format": "prettier . --write",
    "lint": "concurrently 'pnpm:lint:*(!fix)' --prefixColors auto",
    "lint:format": "prettier . --write",
    "lint:types": "tsc --noEmit"
  },
  "dependencies": {
    "@babel/core": "^7.28.3",
    "@embroider/core": "^4.1.3",
    "@embroider/macros": "^1.18.1",
    "@embroider/vite": "^1.2.0",
    "@glimmer/component": "^2.0.0",
    "@rollup/plugin-babel": "^6.0.4",
    "babel-plugin-ember-template-compilation": "^2.4.1",
    "decorator-transforms": "^2.3.0",
    "ember-source": ">= 6.7.0-alpha.1",
    "ember-strict-application-resolver": "^0.1.0"
  },
  "devDependencies": {
    "@ember/library-tsconfig": "^1.1.3",
    "concurrently": "^9.2.1",
    "prettier": "^3.6.2",
    "prettier-plugin-ember-template-tag": "^2.1.0",
    "release-plan": "^0.16.0",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "astro": "^5.0.0"
  },
  "packageManager": "pnpm@10.15.0",
  "ember-addon": {
    "version": 2,
    "type": "addon",
    "main": "./ember-addon-main.cjs"
  },
  "engines": {
    "node": "^20.11.0 || ^22 || >=24"
  }
}
